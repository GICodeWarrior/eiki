<h1>History for: <%=h @page.title %></h1>

<table>
  <tr>
    <th>#</th>
    <th>Title</th>
    <th>Edit summary</th>
  </tr>

<% for page in @page.versions.sort{|p1,p2| p2.version <=> p1.version} %>
  <tr>
    <td><%= page.version %></td>
    <td><%=h page.title %></td>
    <td><%=h page.edit_summary %></td>
    <td><%= link_to 'Show', page_path(:id=>page.title,
                                      :version=>page.version) %></td>
  </tr>
<% end %>
</table>

<br />

